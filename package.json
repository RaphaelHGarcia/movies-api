{
  "name": "api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "nodemon -w src --exec \"babel-node src --presets es2015,stage-0\"",
    "build": "babel src -s -D -d dist --presets es2015,stage-0  --ignore src/public && npm run copy",
    "start": "npm run dev",
    "copy": "cp -Rf src/public dist/",
    "prestart": "npm run -s build",
    "test": "eslint src",
    "knex": "knex --knexfile ./knexfile.js"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module"
    },
    "env": {
      "node": true
    },
    "rules": {
      "no-console": 0,
      "no-unused-vars": 1
    }
  },
  "dependencies": {
    "bcrypt-nodejs": "0.0.3",
    "bluebird": "^3.5.0",
    "body-parser": "~1.16.0",
    "bookshelf": "^0.10.3",
    "bookshelf-bcrypt": "^2.1.0",
    "cookie-parser": "~1.4.3",
    "cors": "^2.8.1",
    "debug": "~2.6.0",
    "express": "~4.14.1",
    "express-validation": "^1.0.2",
    "helmet": "^3.4.1",
    "jade": "~1.11.0",
    "joi": "^10.2.2",
    "jsonwebtoken": "^7.3.0",
    "knex": "^0.12.7",
    "moment": "^2.17.1",
    "morgan": "~1.7.0",
    "mysql": "^2.13.0",
    "redis": "^2.6.5",
    "swagger-express": "^1.0.5",
    "swagger-jsdoc": "^1.9.2"
  },
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-core": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-0": "^6.5.0",
    "eslint": "^3.17.0",
    "nodemon": "^1.9.2"
  }
}
